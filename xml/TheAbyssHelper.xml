<!-- Default formatting -->
<Defaults>
  <Text color="black"
    alignment="MiddleLeft"
    horizontalOverflow="wrap"/>
  <Panel rotation="0 0 180"/>
  <Row dontUseTableRowBackground="true" />
  <Button font="font_teutonic-arkham"
    colors="#e3e3e3|#009acb|#005a77"/>
</Defaults>

<!-- Buttons at the bottom of the Abyss Helper -->
<Panel id="buttonBar"
  position="0 139 -6"
  height="130"
  width="1600"
  scale="0.25 0.25 1">
  <TableLayout cellSpacing="35">
    <Row>
      <Cell>
        <Button fontSize="100"
          onClick="drawFromAbyss(1)">Draw to my playmat</Button>
      </Cell>
      <Cell>
        <Button
          id="showAbyssSetupButton"
          onClick="toggleSetup"
          fontSize="100">Hide Abyss Setup</Button>
      </Cell>
    </Row>
  </TableLayout>
</Panel>

<!-- Help button -->
<Panel position="-180 -130 -6"
  height="100"
  width="100"
  scale="0.25 0.25 1">
  <Button fontSize="90"
    onClick="toggleHelp">?</Button>
</Panel>

<!-- Abyss Helper Help -->
<Panel active="false"
  id="helpPanel"
  position="-370 -6"
  height="300"
  width="300"
  color="#00000099">
  <Text id="helpText"
    rectAlignment="MiddleCenter"
    height="2850"
    width="2800"
    scale="0.1 0.1 1"
    fontSize="145"
    color="#F5F5F5"
    backgroundColor="#FF0000"
    alignment="UpperLeft">This tool is meant for the "Abyss Deck" from the campaign "The Feast of Hemlock Vale".&#xA;&#xA;Placing a card or deck on the discard spot will automatically put those (shuffled) on top of the deck.&#xA;&#xA;Use the "Tag player cards" button to add a tag indicating the owning player to all cards on the playermats. Tags can then be viewed by selecting "Tags" from a card's context menu.&#xA;&#xA;Typing a number while hovering this helper will draw that many cards to your playermat.</Text>
</Panel>

<!-- Abyss Helper Setup-->
<Panel
  active="true"
  id="setupPanel"
  position="0 325 0"
  height="265"
  width="425"
  color="#00000099"
  rotation="0 0 180">
  <TableLayout
    useGlobalCellPadding="true"
    cellPadding="10 10 10 10"
    cellBackgroundColor="clear">
    <Row>
      <Cell>
        <TableLayout
          useGlobalCellPadding="true"
          cellPadding="0 0 0 0"
          cellBackgroundColor="clear">
          <Row preferredHeight="38">
            <Cell>
              <Panel rotation="0 0 0">
                <Text
                  height="130"
                  width="770"
                  scale="0.25 0.25 1"
                  alignment="UpperCenter"
                  rectAlignment="UpperLeft"
                  fontSize="130"
                  font="font_teutonic-arkham"
                  color="white">
                  Abyss Setup
                </Text>
              </Panel>
            </Cell>
          </Row>
          <Row>
            <Cell columnSpan="2">
              <Panel rotation="0 0 0">
                <Text
                  id="explanation"
                  height="1900"
                  width="770"
                  scale="0.25 0.25 1"
                  alignment="UpperLeft"
                  rectAlignment="UpperLeft"
                  fontSize="64"
                  color="white">
                  Explanation Text.
                </Text>
              </Panel>
            </Cell>
          </Row>
          <Row active="True" id="tagRow" preferredHeight="50">
            <Cell columnSpan="2">
              <Panel rotation="0 0 0">
                <Button
                  id="tagPlayerCards"
                  onClick="tagPlayerCards"
                  height="200"
                  width="770"
                  scale="0.25 0.25 1"
                  fontSize="112"
                  text="Tag All Player Cards" />
              </Panel>
            </Cell>
          </Row>
          <Row active="False" id="splitRow" preferredHeight="50">
            <Cell columnSpan="2">
              <Panel rotation="0 0 0">
                <Button
                  id="splitAbyss"
                  onClick="splitAbyss"
                  height="200"
                  width="770"
                  scale="0.25 0.25 1"
                  fontSize="112"
                  text="Split Abyss Deck" />
              </Panel>
            </Cell>
          </Row>
          <Row active="False" id="finalizeRow" preferredHeight="50">
            <Cell columnSpan="2">
              <Panel rotation="0 0 0">
                <Button
                  id="finalizeAbyss"
                  onClick="finalizeAbyss"
                  height="200"
                  width="770"
                  scale="0.25 0.25 1"
                  fontSize="112"
                  text="Finalize Abyss Deck" />
              </Panel>
            </Cell>
          </Row>
          <Row id="navigationRow" preferredHeight="40">
            <Cell>
              <Panel rotation="0 0 0">
                <Button
                  id="backButton"
                  active="False"
                  onClick="previousStep"
                  height="100"
                  width="125"
                  offsetXY="10 0"
                  rectAlignment="MiddleLeft"
                  scale="0.25 0.25 1"
                  fontSize="64"
                  text="back" />
              </Panel>
            </Cell>
            <Cell>
              <Panel rotation="0 0 0">
                <Button
                  id="forwardButton"
                  active="True"
                  onClick="nextStep"
                  height="100"
                  width="125"
                  offsetXY="-10 0"
                  rectAlignment="MiddleRight"
                  scale="0.25 0.25 1"
                  fontSize="64"
                  text="skip" />
              </Panel>
            </Cell>
          </Row>
        </TableLayout>
      </Cell>
      <Cell>
        <!-- Right Half for bags -->
      </Cell>
    </Row>
  </TableLayout>
</Panel>
